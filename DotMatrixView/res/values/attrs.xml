<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MatrixDisplay">
        <attr name="dotPaddingTop" format="integer" />
        <attr name="dotPaddingLeft" format="integer" />
        <attr name="dotPaddingBottom" format="integer" />
        <attr name="dotPaddingRight" format="integer" />
        <attr name="backgroundColor" format="color" />
        <attr name="dotColorLit" format="color" />
        <attr name="dotColorDim" format="color" />
        <attr name="dotRadius" format="integer" />
        <attr name="dotSpacing" format="integer" />
        <attr name="transitionDuration" format="integer" />
        <attr name="format" format="string" />
        <attr name="value" format="string" />
        <attr name="value_updater">
            <flag name="static_value" value="0" />
            <flag name="clock_per_second" value="1" />
        </attr>
    </declare-styleable>

</resources>